#!/bin/bash

# Bash script to display the PID and process name of processes with the name 'bash'

# Get the PID of the script
script_pid=$$

# Use pgrep to find PIDs of processes with the name 'bash'
bash_pids=$(pgrep -x bash)

# Display PID and process name, excluding the script's own PID
for pid in $bash_pids; do
    if [ "$pid" != "$script_pid" ]; then
        process_name=$(ps -o comm= -p "$pid" | tail -n 1)
        if [ "$process_name" == "bash" ]; then
            echo "$pid $process_name"
        fi
    fi
done
